<h1>Edit Profile</h1>

<%= form_for(@dog) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :breed %>
  <%= f.text_field :breed %>

  <%= f.label :pick_up_address %>
  <%= f.text_field :pick_up_address %>

  <%= f.label :special_requirements %>
  <%= f.text_field :special_requirements %>
  <%= f.submit %>
<% end %>

<%= link_to "Cancel", dog_path(@dog.id) %>
