  <!--------Displaying all days  -->
  <% start_date_on_heading = params[:date].to_date.beginning_of_week %>
  <% end_date_on_heading =  params[:date].to_date.end_of_week-2 %>

  <h5> <%= start_date_on_heading%>.... <%= end_date_on_heading %></h5>
  <ul class="nav nav-tabs days_list" role="tablist">
    <!-----Button to toggle previous week  -->
    <li>
    <%= link_to walks_schedule_path(params[:date].to_date.last_week) do %>
            <i class="fas fa-backward"></i>
            <% end %>
    </li>

    <% @days_from_this_week.each do |day| %>

    <!-- <li class="nav-item days_list"> -->
      <li class="nav-item">
      <% css_class = day == Date.parse(params[:date]) ? "active" : "" %>
      <%= link_to day.strftime("%A").first(3), walks_schedule_path(day), class: "nav-link #{css_class}"%>
    </li>
    <% end %>

    <!-----Button to toggle next week  -->
    <li>
    <%= link_to walks_schedule_path(params[:date].to_date.next_week) do %>
          <i class="fas fa-forward"></i>
          <% end %>
    </li>

  </ul>


<!---------Displaying list of dogs  -->
  <% if @walk %>
    <% @walk.slots.each do |st|  %>
      <div class = "card-product">
       <%= cl_image_tag st.dog.image.key, height: 80, width: 80, crop: :fill  %>

        <div class="card-product-infos">
          <h2><%= st.dog.name %></h2>
        </div>
        <!------delete a slot  -->
          <div class="icon-container">
            <%= link_to slot_path(st), method: :delete do %>
            <i class="fas fa-times"></i>
            <% end %>
          </div>
        </div>

      </div>
    <% end %>
  <% end %>

  <!------Dropdown list of dogs for adding a new slot-->
  <div class="container">
  <%= simple_form_for @slot, method: :post do |f|%>
    <%= f.association :dog, collection: Dog.all.where.not(id: @walk.slots.select(:dog_id)), prompt: 'Create a new slot for ', label: false, input_html: {class: "form-rounded"}  %>
    <%= f.input :walk_id, :as => :hidden, :input_html => { :value => @walk.id } %>
    <%= f.submit "+" %>
   <% end %>
  </div>
</div>



